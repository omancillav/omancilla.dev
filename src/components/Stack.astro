---
import { BACKEND, FRONTEND, DATABASE, TOOLS } from '@/lib/stack'
import StackCard from './StackCard.astro';
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <StackCard title="Backend">
    {
      BACKEND.map(({ name, icon: Icon }) => (
        <div class="flex flex-col items-center gap-3 text-center justify-center hover:scale-105 transition-transform">
          <Icon class="size-10" />
          <span class="text-sm">{name}</span>
        </div>
      ))
    }
  </StackCard>
  <StackCard title="Frontend">
    {
      FRONTEND.map(({ name, icon: Icon }) => (
        <div class="flex flex-col items-center gap-3 text-center justify-center hover:scale-105 transition-transform">
          <Icon class="size-10" />
          <span class="text-sm">{name}</span>
        </div>
      ))
    }
  </StackCard>
  <StackCard title="Base de Datos">
    {
      DATABASE.map(({ name, icon: Icon }) => (
        <div class="flex flex-col items-center gap-3 text-center justify-center hover:scale-105 transition-transform">
          <Icon class="size-10" />
          <span class="text-sm">{name}</span>
        </div>
      ))
    }
  </StackCard>
  <StackCard title="Herramientas">
    {
      TOOLS.map(({ name, icon: Icon }) => (
        <div class="flex flex-col items-center gap-3 text-center justify-center hover:scale-105 transition-transform">
          <Icon class="size-10" />
          <span class="text-sm">{name}</span>
        </div>
      ))
    }
  </StackCard>
</div>
